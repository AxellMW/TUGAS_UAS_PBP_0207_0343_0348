<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="order"
            type="com.example.ugdpbp.model.Order" />
        <variable
            name="activity"
            type="com.example.ugdpbp.fragment.FragmentOrder" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.FragmentOrder">

        <LinearLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="0dp"
                android:textAlignment="center"
                android:text="Pesan Kamar"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <ScrollView
            android:layout_below="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etNamaLengkap"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={order.nama_lengkap}"
                        android:layout_marginVertical="10dp"
                        android:hint="Nama Lengkap"/>

                    <EditText
                        android:id="@+id/etNoTelp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={order.no_telp}"
                        android:layout_marginVertical="10dp"
                        android:hint="Nomor Telepon"/>

                    <EditText
                        android:id="@+id/etTipeKamar"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={order.tipe_kamar}"
                        android:layout_marginVertical="10dp"
                        android:hint="Tipe Kamar"/>

                    <EditText
                        android:id="@+id/etNoKamar"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={order.no_kamar}"
                        android:layout_marginVertical="10dp"
                        android:hint="Nomor Kamar"/>

                    <EditText
                        android:id="@+id/etTglPesan"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={order.tanggal_pemesanan}"
                        android:layout_marginVertical="10dp"
                        android:hint="Tanggal Masuk Pegawai"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:background="@color/white"
            android:padding="20dp">

            <Button
                android:id="@+id/btnHapus"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FF0000"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Hapus"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btnTambah"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#03FDFC"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="CREATE"
                android:textColor="@color/black"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>